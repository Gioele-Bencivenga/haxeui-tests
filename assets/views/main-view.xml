<vbox id="mainContainer" width="100%" height="100%">
    <style>
        #mainContainer{
        spacing: 0px;
        border: 1px solid $normal-border-color;
        padding: 1px;
        }
        .button.menuBtn {
            border: 0px none;
            padding: 0.5vh 1vw;
            color: #000000;
            font-weight: bold;
            font-size: 20px;
            background-color: #00FFFFFF;
            opacity: 0.5;
        }
        .button.menuBtn:hover {
            color: #000000;
            background-color: #00FFFFFF;
            opacity: 1;
        }
        .button.menuBtn:down {
            color: #000000;
            background-color: #00FFFFFF;
        }
    </style>
    <menubar width="100%" style="padding: 0px">
        <button id="btn_sidebar" text="â˜°" styleName="menuBtn" />
        <spacer width="30"/>
        <button id="btn_import" text="Import" styleName="neon" />
    </menubar>

    <box id="windowContainer" styleNames="window-manager-container" width="100%" height="100%">
        <vbox>
            <label text="Open a file to get started\nClick on Import and select a .CSV file, you can find an example one in /haxeui-tests/assets/files/" />
        </vbox>
    </box>
    <hbox width="100%" style="spacing:0;">
        <window-adder>
        </window-adder>
        <window-tablist id="windowTabList">
        </window-tablist>
    </hbox>
</vbox>