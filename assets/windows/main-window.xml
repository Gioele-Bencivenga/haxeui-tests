<window id="main_window" title="Main Window">
    <style>
        .editable-item-renderer {
        padding: 0px;
        }
        .editable-item-renderer .label {
        padding: 5px;
        }
        .editable-item-renderer .textfield {
        padding: 5px;
        border: none;
        filter: none;
        border-radius: none;
        background-color: moccasin;
        }
        .colored {
            background-color: #00BFFF;
        }
    </style>
    <window-title width="100%" style="padding: 5px;">
    </window-title>
    <hbox width="100%" height="100%">
        <tableview id="mainTable" virtual="true" styleName="classic-scrolls" width="100%" height="100%" contentWidth="100%">
            <header id="header1" width="100%">
                <column id="Id" width="100%">
                    <vbox width="100%">
                        <label text="ID" />
                        <textfield id="idFilter" placeholder="Search by Id" text="" width="100%" />
                    </vbox>
                </column>
                <column id="Name" width="100%" sortable="true">
                    <vbox width="100%">
                        <label text="Product" />
                        <!--<textfield id="productFilter" placeholder="Search Product" text="" width="100%" /> -->
                    </vbox>
                </column>
                <column id="Quantity" text="Quantity" width="100%" sortable="true" />
                <column id="Expiration" text="Expiration" width="100%" sortable="true" />
                <column id="Notes" width="100%">
                    <vbox width="100%">
                        <label text="Notes" />
                        <!--<textfield id="notesFilter" placeholder="Search Notes" text="" width="100%" /> -->
                    </vbox>
                </column>
            </header>

            <editable-item-renderer id="Id" />
            <editable-item-renderer id="Name" />
            <editable-item-renderer id="Quantity" />
            <editable-item-renderer id="Expiration" />
            <editable-item-renderer id="Notes" />
        </tableview>
    </hbox>
    <window-footer width="100%" style="padding: 3px;">
        <button id="btn_setColor" text="Set Color" />
        <button id="btn_delete" text="Delete" />
        <spacer width="100%" />
        <button id="button2" text="Print" />
    </window-footer>
</window>